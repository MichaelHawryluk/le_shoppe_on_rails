<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>String</th>
      <th>Image</th>
      <th>String</th>
      <th>Product stock</th>
      <th>Int</th>
      <th>Price</th>
      <th>Int</th>
      <th>Product status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.string %></td>
        <td><%= product.image %></td>
        <td><%= product.string %></td>
        <td><%= product.product_stock %></td>
        <td><%= product.int %></td>
        <td><%= product.price %></td>
        <td><%= product.int %></td>
        <td><%= product.product_status_id %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

